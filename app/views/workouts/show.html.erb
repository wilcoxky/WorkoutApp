<style type="text/css">

.well {
    margin-right: 300px;
    margin-left: 300px;
}
</style>

<div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/en_US/all.js#xfbml=1";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>


<div class = "well">
<h1><%= @workout.title %></h1>
<h6>Created By: <%= link_to @workout.user.username, user_path(@workout.user.id) %></h6>

<div>
	<p></p>
	<p>Category: <%= @workout.category %></p>
	<p>Excercise: <%= @workout.excercise%> </p>
	<div class = "container">
    	<button class = "ComButton">Show Comments</button>
    	<div class = "comments">
    		<p>Comments:</p>
    		<% @comments.each do |comment| %>
    			<h6>Comment By : <%= link_to comment.user.username, user_path(comment.user.id) %></h6>
    			<p>Body : <%= comment.body %></p>
    		<% end %>
    	</div>
  	</div>

	<%= link_to "Add Comment", new_comment_path %>
    <div class="fb-like" data-href="https://developers.facebook.com/docs/plugins/" data-layout="box_count" data-action="like" data-show-faces="true" data-share="true"></div>
	<% if current_user.id == @workout.user.id %>
	<p>Remove your workout?</p>
	<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
	            workout_path(@workout),
	            :method => :delete,
	            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
	            :class => 'btn btn-mini btn-danger' %>
	<% else %>
	<% end %>
	
</div>
</div>

